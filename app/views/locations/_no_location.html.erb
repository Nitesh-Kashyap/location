
<div class="col mb-5">
	<div class="card h-100">
		<div class="card-body p-4">
			<div class="text-center">
				<h5 class="fw-bolder">Hi, <%= current_user.try(:email) %></h5>
				<div class="d-flex justify-content-center medium text-warning mb-2">
					<h3>You don't have any location to display.<br> Please Add your first location!</h3>
				</div>
			</div>
		</div>
		<!-- Product actions-->
		<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
			<div class="text-center">
				<%= link_to "Add Location", new_location_path, class: 'btn btn-outline-dark mt-auto' %>
			</div>
		</div>
	</div>
</div>