<div class="row form-group">
	<div class="col-sm-2">
		<%= f.label :name %>
	</div>

	<div class="col-sm-10">
		<%= f.text_field(:name, required: true, class: "form-control") %>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-2">
		<%= f.label :description %>
	</div>

	<div class="col-sm-10">
		<%= f.text_area(:description, required: true, class: "form-control") %>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-2">
		<%= f.label :address %>
	</div>

	<div class="col-sm-10">
		<%= f.text_area(:address, required: true, class: "form-control") %>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-2">
		<%= f.label :image %>
	</div>

	<div class="col-sm-10">
		<%= f.file_field(:image, multiple: true, class: "form-control") %>
	</div>
</div> 