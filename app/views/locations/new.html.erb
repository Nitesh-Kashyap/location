<div class="row wrapper border-bottom white-bg page-heading">
	<div class="container">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="text-center">Add Location</h3>
			</div>

			<div class="panel-body">
				<%= form_for(@location, url: locations_path, html: { class: "form-horizontal", autocomplete: "off" }) do |f| %>
				<%= render 'form', f: f %>
				<div class="row form-group">
					<center><%= f.submit "Create Location", class: "btn btn-success btn-sm" %></center>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

