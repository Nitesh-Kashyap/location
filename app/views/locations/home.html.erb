<!-- Section-->
<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
	<% if @locations.present? %>
		<% @locations.each do |location| %>
			<div class="col mb-5">
				<div class="card h-100">
					<%= image_tag(location.image.last, class: 'card-img-top') if location.image.present? %>
					<div class="card-body p-4">
						<div class="text-center">
							<h5 class="fw-bolder"><%= location.name %></h5>
							<div class="d-flex justify-content-center medium text-warning mb-2">
								<%= location.description %>
							</div>
						</div>
					</div>
					<!-- Product actions-->
					<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
						<div class="text-center">
						<%= link_to "View Location", location_path(location), class: 'btn btn-outline-dark mt-auto' %>
					</div>
					</div>
				</div>
			</div>
		<% end %>
	<% else %>
	  <%= render 'no_location' %>
	<% end %>
</div>